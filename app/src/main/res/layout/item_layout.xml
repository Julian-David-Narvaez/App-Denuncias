<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <!-- res/layout/item_layout.xml -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/redondo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/redondo"
                android:elevation="1dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/editNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Producto"
                android:textSize="@dimen/dieciseis"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/editPrecio"
                android:layout_width="wrap_content"
                android:text="0"
                android:layout_height="40dp"
                android:fontFamily="serif"
                android:textSize="@dimen/veinte"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_moneda"
                android:layout_marginRight="25dp"/>

            <Button
                android:id="@+id/btncanjear"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:backgroundTint="#8FC927"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="5dp"
                android:text="Canjear"
                android:textSize="@dimen/catorce"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnEliminar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="boton eliminar"
                android:scaleType="centerCrop"
                android:src="@drawable/eliminar"
                android:backgroundTint="#CCC7C7"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextView para mostrar el nombre -->

    <!-- TextView para mostrar la direcciÃ³n -->
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="216dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/redondo">

        <ImageView
            android:id="@+id/imageViewNoticia"
            android:layout_width="153dp"
            android:layout_height="157dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="198dp"
            android:layout_marginBottom="34dp"

            android:elevation="1dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tituloNoticia"
            android:layout_width="143dp"
            android:layout_height="40dp"
            android:layout_above="@+id/ContenidoNoticia"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="166dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="8dp"
            android:padding="2dp"
            android:text="TITULO"
            android:textAlignment="center"
            android:textSize="@dimen/catorce"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btneliminarnoticia"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="2dp"
            android:backgroundTint="#CCC7C7"
            android:contentDescription="boton eliminar"
            android:scaleType="centerCrop"
            android:src="@drawable/boton_eliminar" />

        <TextView
            android:id="@+id/ContenidoNoticia"
            android:layout_width="178dp"
            android:layout_height="152dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="173dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="16dp"
            android:text="CONTENIDO"
            android:textAlignment="center"
            android:textSize="@dimen/doce" />

    </RelativeLayout>


</RelativeLayout>